#include <stdio.h>

int main(void) {

	char one, two;

	printf("Input two characters: ");
	scanf("%c%c", &one, &two);
	printf("%c %c\n", one, two);

	printf("Input two characters: ");
	scanf("%c %c", &one, &two);
	printf("%c %c\n", one, two);

	return 0;
}
