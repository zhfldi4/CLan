#include <stdio.h>

int main(void) {

	int data[4][7] =
			{ { 25, 30, 22, 28, 32, 45, 30 }, { 22, 25, 28, 26, 38, 40, 33 }, {
					25, 34, 20, 22, 40, 36, 37 }, { 22, 28, 27, 28, 35, 40, 32 } };

	int sum = 0;
	double avg;

	puts("gubun\t\tMon\tTue\tWen\tThr\tFri\tSat\tSun\tSum\tAvg");

	int i, j;
	for (i = 0; i < 4; i++) {
		printf("%dweeks:\t", i + 1);
		for (j = 0; j < 7; j++) {
			printf("%d\t%", data[i][j]);
			sum += data[i][j];
		}
		printf("%d\t", sum);
		puts("");
	}
	return 0;
}
