#include <stdio.h>

int main(void) {

	int a[3] = {10, 20, 30};
	int *pt;

	pt = a;

	printf("Array Name: %p\n", a);
	printf("a[0]'s Address: %p\n", &a[0]);
	printf("a[1]'s Address: %p\n", &a[1]);
	printf("a[2]'s Address: %p\n", &a[2]);
	printf("a[0]'s Value: %d\n", a[0]);
	printf("Position to pt indicate: %d", *pt);

	return 0;
}
