#include <stdio.h>

int main(void) {

	int num;

	puts("Input num");
	scanf("%d", &num);

	int i;

	for (i = 0; i < 32; i++) {
		if (num & 0x80000000)
			putchar('1');
		else
			putchar('0');

		num <<= 1;

		if ((i % 4) == 0)
			putchar(' ');
	}
	return 0;
}
