#include <stdio.h>

int tne1(int n);

int main(void) {

	int num;

	scanf("%d", &num);
	num = tne1(num);

	printf("%d", num);

	return 0;
}

int tne1(int n) {
	int i;
	int two = 2;

	for (i = 1; i < n; i++) {
		two *= 2;
	}

	return two;
}
