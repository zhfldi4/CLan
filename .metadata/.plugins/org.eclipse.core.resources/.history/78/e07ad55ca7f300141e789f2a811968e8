#include <iostream>
#include <string>
#include <cstring>

using namespace std;

int main() {

	char *ch = new char;
	int count = 0;
	cin.getline(ch, 20);

	char *token;

	while (strcmp(ch, "done")) {
		cout << ch;
		cin.getline(ch, 20);
		token = strtok(ch, " ");
		cout << strlen(token);
//		count += strlen(token);
	}

	cout << count << " words reads" << endl;

	return 0;

}
