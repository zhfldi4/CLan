#include <iostream>

using namespace std;

int main() {

	int updates = 6;
	int* p_updates = &updates;

	cout << "Value: updates = " << updates;
	cout << ", *p+updates = " << *p_updates << endl;

	cout << "Address: &updates = " << &updates;
	cout << ", p_updates = " << p_updates << endl;

	return 0;
}



