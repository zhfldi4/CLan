#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int maxDay, day;

	printf("Input maximum day: ");
	scanf("%d", &maxDay);
	printf("Input First day(ex: 0:Sun, 1:Mon,...): ");
	scanf("%d", &day);

	printf("\nSu\tMo\tTu\tWe\tTh\tFr\tSa\n");

	int i = 0;
	while (i == maxDay) {
		if (i < day)
			printf("\t");
			continue;
	}
	return 0;
}
