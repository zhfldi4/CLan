#include <iostream>
using namespace std;

unsigned int c_in_str(const char* str, char ch);

int main() {


	return 0;
}

unsigned int c_in_str(const char* str, char ch) {
	int count = 0;

	while (*str) {
		if (*str == ch)
			count++;
		str++;
	}

	return count;
}
