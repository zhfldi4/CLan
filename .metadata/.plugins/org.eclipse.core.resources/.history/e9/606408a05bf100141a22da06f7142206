#include <iostream>

using namespace std;

int main() {
	const int ArrSize = 20;
	char name[ArrSize];
	char dessert[ArrSize];

	cout << " Input Your name: " ;
	cin.getline(name, ArrSize);
	cout << " Input like dessert: ";
	cin.getline(dessert, ArrSize);

	cout << "Prepare the delicious " << dessert;
	cout << " to " << name << endl;
}
