#include <iostream>
#include "stock00.h"

void Stock::acquire(const std::string &co, long n, double pr) {
	company = co;

	if (n < 0) {
		std::cout << "stock value are not negative, ";
		std::cout << company << " shares value set on 0" << std::endl;

		shares = 0;
	} else {
		shares = n;
		share_val = pr;
		set_tot();
	}
}

void Stock::buy(long num, double price) {
	if (num < 0) {
		std::cout << "purchase stock value is not negative, ";
		std::cout << "The Deal is canceled." << std::endl;
	} else {
		shares += num;
		share_val = price;
		set_tot();
	}
}

void Stock::sell(long num, double price) {
	using std::cout;

	if (num < 0) {
		cout << "Sell stock value is not negative, ";
		cout << "The Deal is canceled." << std::endl;
	} else if (num > shares) {
		cout << "Sell value is too large than shared stock, ";
		cout << "The Deal is canceled." << std::endl;
	} else {
		shares -= num;
		share_val = price;
		set_tot();
	}
}

void Stock::update(double price) {
	share_val = price;
	set_tot();
}

void Stock::show() {
	using std::cout;
	using std::endl;
	cout << "Company: " << company << endl;
	cout << "Stock Value: " << shares << endl;
	cout << "Value: " << share_val << endl;
	cout << "Stock Total value: " << total_val << endl;
}
