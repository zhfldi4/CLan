#include <stdio.h>

int main(void) {

	int num;

	int sum = 0, avg;

	scanf("%d", &num);

	int i;
	for (i = 0; i < 20; i++) {
		sum += num;
		scanf("%d", &num);

		if (num == 0)
			break;
	}

	avg = sum / (i + 1);

	printf("%d %d", sum, avg);

	return 0;
}


