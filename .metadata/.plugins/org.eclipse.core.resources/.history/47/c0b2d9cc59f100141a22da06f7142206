#include <iostream>

using namespace std;

int main() {

	int yams[3];

	yams[0] = 7;
	yams[1] = 8;
	yams[2] = 6;

	int yamsCost[3] = {200, 300, 50};

	int yamsSum = yams[0] + yams[1] + yams[2];

	cout << "Yam's Sum = " << yamsSum << endl;

	cout << "Yam " << yams[1] << " s cost is " << yamsCost[1];

	int totalCost = 0;

	for (int i = 0 ; i < 3; i++) {
		totalCost += yams[i] * yamsCost[i];
	}

	return 0;
}

