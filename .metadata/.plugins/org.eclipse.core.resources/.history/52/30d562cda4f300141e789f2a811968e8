#include <iostream>
#include <string>
using namespace std;

int main() {

	string word;

	cout << "Input 1 word: ";
	cin >> word;

	for (int i = word.size() - 1; i >= 0; i--)
		cout << word[i];

	cout << "Exit" << endl;

	return 0;
}
