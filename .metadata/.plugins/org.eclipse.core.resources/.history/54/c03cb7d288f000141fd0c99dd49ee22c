#include <iostream>

using namespace std;

class Student {
public:
	char name[20];
	int kor, math, eng;
	float tot, avg;

public:
	void print() {
		cout << "name: " << name << endl;
		cout << "score:\tKor\tMath\tEng\tTotal\tAvg" << endl;
		cout << "\t" << kor << "\t" << math << "\t" << eng << "\t" << tot
				<< "\t" << avg << endl;
	}

};

int main() {
	Student student1;

	student1.name = "GilDong";

	student1.kor = 100;
	student1.math = 90;
	student1.eng = 80;

	student1.tot = student1.kor + student1.math + student1.eng;
	student1.avg = student1.tot / 3;

	student1.print();

	return 0;
}

