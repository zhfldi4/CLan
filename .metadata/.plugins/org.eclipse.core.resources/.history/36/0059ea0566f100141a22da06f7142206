#include <iostream>
#include <cstring>

using namespace std;

int main() {

	string name;
	string dessert;

	cout << "Name: ";
	cin.getline(name, 20);
	cout << "Dessert: ";
	cin >> dessert;

	cout << "Name: " << name << ", Dessert: " << dessert << endl;


	return 0;

}
