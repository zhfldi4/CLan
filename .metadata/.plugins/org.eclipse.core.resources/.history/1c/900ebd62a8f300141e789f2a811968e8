#include <iostream>

using namespace std;

int main() {

	int count;

	cout << "print row num: ";
	cin >> count;

	for (int i = 0; i < count; i++) {
		for (int k = 1; k < count - i + 1; k++) {
			cout << '.';
		}

		for (int j = 0; j < i + 1; j++) {
			cout << '*';
		}
		cout << endl;
	}

	return 0;

}
