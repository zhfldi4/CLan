#include <iostream>
#include <cctype>
#include "stack.h"

using namespace std;

int main() {

	Stack stack;
	char ch;
	unsigned long po;

	cout << "Press A to insert bill, Press P to process bill, \n";
	cout << "Press Q to quit. \n";

	while (cin >> ch && toupper(ch) != 'Q') {
		while (cin.get() != '\n')
			continue;

		if (!isalpha(ch)) {
			cout << '\a';
			continue;
		}

		switch (ch) {
		case 'A':
		case 'a':
			cout << "Input Number for inserting bill: ";
			cin >> po;

			if (stack.isFull())
				cout << "Stack is Full!!\n";
			else
				stack.push(po);
			break;

		case 'P':
		case 'p':
			if (stack.isEmpty()) {
				cout << "Stack is Empty!!\n";
			} else {
				stack.pop(po);
				cout << "#" << po << "bill is processed\n";
			}

		}
	}

	return 0;
}

