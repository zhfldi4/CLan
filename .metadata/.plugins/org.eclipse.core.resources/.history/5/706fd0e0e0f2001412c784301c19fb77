#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int miles, yards;
	float kilometers;

	miles = 26;
	yards = 385;
	kilometers = 1.609 * (miles + yards / 1760.0);

	printf("\n Maraton distance is %f km.", kilometers);


	return 0;
}
